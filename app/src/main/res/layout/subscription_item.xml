<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- res/layout/subscription_item.xml -->
    <!-- res/layout/subscription_item.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/serviceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название сервиса"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymentDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата платежа" />

        <TextView
            android:id="@+id/paymentAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сумма платежа" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>